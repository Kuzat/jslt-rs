{
  "name": "jslt-vscode",
  "displayName": "JSLT Language Serer",
  "description": "Language support for JSLT language",
  "version": "0.1.0",
  "publisher": "vegard-bjorsvik",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": ["Programming Languages"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "jslt",
        "extensions": [".jslt"],
        "aliases": ["JSLT", "jslt"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "jslt",
        "scopeName": "source.jslt",
        "path": "./syntaxes/jslt.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "JSLT",
      "properties": {
        "jslt.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the JSLT language server executable"
        },
        "jslt.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Trace level for the JSLT language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && bash scripts/build.sh",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:server": "bash scripts/build.sh",
    "package": "vsce package"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.76.0",
    "typescript": "^4.9.5"
  }
}
